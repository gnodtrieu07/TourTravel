<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TourDetails"
    android:background="#F1EFEF"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"

        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/viewPagerdetails"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/a1"/>

                </LinearLayout>
                <LinearLayout android:id="@+id/tourAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewPagerdetails"
                    android:orientation="vertical"
                    android:background="@drawable/bg_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="10dp">

                    <TextView android:id="@+id/tvTourName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:paddingVertical="10dp"
                        android:textColor="@color/black"
                        android:text="Tour name" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="Điểm đến : "/>
                        <TextView
                            android:id="@+id/placeTour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:text="Điểm đến"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="Thời gian đi tour : "/>
                        <TextView
                            android:id="@+id/timeTour"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="Nơi khởi hành : "/>
                        <TextView
                            android:id="@+id/placeStart"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Place"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tourAD"
                    android:orientation="vertical"
                    android:background="@drawable/bg_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginVertical="5dp"
                        android:textColor="@color/black"
                        android:text="Chi tiết Tour"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="#757474"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"/>
                    <TextView
                        android:id="@+id/tourtrend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:text="Tổ hợp xông hơi Jjimjilbang Flamingo Đại Lải Resort có 7 phòng chức năng: Đá Quý, Hoàng Thổ, Ion và Sắc màu, Đá muối, Đá núi lửa, Oxy - Hinoki, Phòng tuyết và hang xông hồng ngoại. Các phòng xông hơi được kết hợp sử dụng các nguyên liệu đặc biệt, có lợi cho sức khỏe, đồng thời giữ được nguyên bản mô hình xông hơi Jjimjilbang cộng đồng của xứ kim chi."/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_edit_tour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:backgroundTint="#68D3DAE8"
                        android:textColor="#4267b2"
                        android:visibility="invisible"
                        android:text="Chỉnh sửa tour" />

                    <Button
                        android:id="@+id/btn_remove_tour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:backgroundTint="#68D3DAE8"
                        android:textColor="#4267b2"
                        android:visibility="invisible"
                        android:text="Xoá tour" />


                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

    </LinearLayout>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mức giá chỉ từ : "
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120.000 VND"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#EA7815"/>

            </LinearLayout>
            <Button
                android:id="@+id/btnTimTour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:backgroundTint="#87A8D0"
                android:layout_marginRight="20dp"
                android:text="Tiếp theo"/>


        </androidx.cardview.widget.CardView>

</LinearLayout>
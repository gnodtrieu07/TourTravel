<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="15sp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_slider"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/a1" />
        <TextView android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Name"/>
        <TextView android:id="@+id/pricePeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="pricePeople"/>
        <TextView
            android:id="@+id/priceChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="invisible"
            android:textColor="@color/black"

            android:text="priceChild"/>
        <TextView android:id="@+id/timeTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:text="timeTour"/>
        <TextView android:id="@+id/placeTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:text="placeTour"/>
        <TextView android:id="@+id/placeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:text="placeStart"/>
        <TextView android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:text="about"/>
        <TextView android:id="@+id/sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:text="about"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>